{
  "manifest_version": 3,
  "name": "KnowMal",
  "version": "0.1.0",
  "permissions": [
    "storage",
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "http://localhost:8000/*", 
    "http://127.0.0.1:8000/*",
    "http://13.125.46.188/*",
    "https://knowmal.duckdns.org/*",
    "https://*.tistory.com/*",
    "https://blog.kakaocdn.net/*",
    "https://mail.google.com/*"
  ],
  "icons": {
    "16": "images/KnowMal_logo.png",
    "48": "images/KnowMal_logo.png",
    "128": "images/KnowMal_logo.png"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/KnowMal_logo.png",
      "48": "images/KnowMal_logo.png",
      "128": "images/KnowMal_logo.png"
    }
  },
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": [
        "https://*.tistory.com/*",
        "https://*.tistory.io/*",
        "https://blog.kakaocdn.net/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": ["content_gmail.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
